<div class="container">
      <p id="notice">
            <%= notice %>
      </p>
      <div class="mx-auto col-md-6">
            <h1>Cadastros</h1>

            <table class="table">
                  <thead>
                        <tr>
                              <th>Nome</th>
                              <th colspan="3"></th>
                        </tr>
                  </thead>

                  <tbody>
                        <% @cadastros.each do |cadastro| %>
                        <tr>
                              <td>
                                    <%= cadastro.nome %>
                              </td>
                              <td>
                                    <%= link_to 'Show', cadastro %>
                              </td>
                              <td>
                                    <%= link_to 'Edit', edit_cadastro_path(cadastro) %>
                              </td>
                              <td>
                                    <%= link_to 'Destroy', cadastro, method: :delete, data: { confirm: 'Are you sure?' } %>
                              </td>
                        </tr>
                        <% end %>
                  </tbody>
            </table>

            <br>

            <%= link_to 'New Cadastro', new_cadastro_path %>
      </div>
</div>